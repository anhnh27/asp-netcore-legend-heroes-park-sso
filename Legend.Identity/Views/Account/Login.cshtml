@model IdentityServer4.Quickstart.UI.LoginViewModel

@{
    var dictionary = new Dictionary<string, string> { { "ReturnUrl", Model.ReturnUrl } };
}

@section styles {
    <link rel="icon" type="image/png" href="~/login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/bootstrap/css/bootstrap.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/fonts/font-awesome-4.7.0/css/font-awesome.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/fonts/iconic/css/material-design-iconic-font.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/css-hamburgers/hamburgers.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/animsition/css/animsition.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/select2/select2.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/login/css/main.css">
}

@section scripts {
    <!--===============================================================================================-->
    <script src="~/login/vendor/jquery/jquery-3.2.1.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/vendor/animsition/js/animsition.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/login/vendor/bootstrap/js/bootstrap.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/vendor/select2/select2.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/vendor/daterangepicker/moment.js"></script>
    <script src="~/login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/js/main.js"></script>
}

<div class="login-page">
    <partial name="_ValidationSummary" />

    <div class="row">

        @if (Model.EnableLocalLogin)
        {
            <div class="limiter">
                <div class="container-login100">
                    <div class="wrap-login100 p-t-20 p-b-20">
                        <form class="login100-form validate-form" asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <span class="login100-form-title p-b-30">
                                Legend Heroes Park
                            </span>
                            <span class="login100-form-avatar">
                                <img src="~/login/images/avatar-01.png" alt="AVATAR">
                            </span>

                            <div class="wrap-input100 validate-input m-t-35 m-b-35" data-validate="Enter username">
                                <input class="input100" type="text" name="username" asp-for="Username">
                                <span class="focus-input100" data-placeholder="Username"></span>
                            </div>

                            <div class="wrap-input100 validate-input m-b-35" data-validate="Enter password">
                                <input type="password" class="input100" asp-for="Password" autocomplete="off">
                                <span class="focus-input100" data-placeholder="Password"></span>
                            </div>
                            @if (Model.AllowRememberLogin)
                            {
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" asp-for="RememberLogin">
                                        <span class="checkbox-icon-wrapper">
                                            <span class="checkbox-icon glyphicon glyphicon-ok"></span>
                                        </span>
                                        Remember Me
                                    </label>
                                </div>
                            }
                            <div class="container-login100-form-btn">
                                <button class="login100-form-btn" name="button" value="login">
                                    Login
                                </button>
                            </div>
                        </form>
                        <a href="#" class="forgot-pwd-button ">Forgot Password</a>
                        @if (Model.VisibleExternalProviders.Any())
                        {
                            <div class="m-t-35 external-providers">
                                <div class="panel-body">
                                    <ul class="list-inline">
                                        @foreach (var provider in Model.VisibleExternalProviders)
                                        {
                                        <li>
                                            <a
                                               asp-controller="External"
                                               asp-action="Challenge"
                                               asp-route-provider="@provider.AuthenticationScheme"
                                               asp-route-returnUrl="@Model.ReturnUrl">
                                                @if (provider.DisplayName == "Google")
                                                {
                                                    <img class="btn-social" src="~/socials/icons8-google-plus-240.png">
                                                }
                                                else if (provider.DisplayName == "Facebook")
                                                {
                                                    <img class="btn-social" src="~/socials/icons8-facebook-240.png">
                                                }
                                                else
                                                {
                                                    <img class="btn-social" src="~/socials/icons8-weixin-240.png">
                                                }
                                            </a>
                                           
                                        </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }
                        @if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
                        {
                            <div class="alert alert-warning">
                                <strong>Invalid login request</strong>
                                There are no login schemes configured for this client.
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>